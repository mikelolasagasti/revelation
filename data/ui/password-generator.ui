<?xml version="1.0" encoding="UTF-8"?>
<interface domain="revelation">
  <object class="GtkBox" id="password_generator_section">
    <property name="orientation">vertical</property>
    <property name="spacing">6</property>
    <child>
      <object class="GtkLabel" id="section_title">
        <property name="label" translatable="yes">Password Generator</property>
        <property name="use-markup">True</property>
        <property name="xalign">0.0</property>
        <property name="halign">start</property>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="password_row">
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="password_label">
            <property name="label" translatable="yes">Password:</property>
            <property name="use-markup">False</property>
            <property name="halign">end</property>
            <property name="xalign">1.0</property>
            <property name="justify">right</property>
            <property name="width-chars">10</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="password_entry">
            <property name="tooltip-text" translatable="yes">The generated password</property>
            <property name="editable">False</property>
            <property name="visibility">False</property>
            <property name="hexpand">True</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="length_row">
        <property name="orientation">horizontal</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkLabel" id="length_label">
            <property name="label" translatable="yes">Length:</property>
            <property name="use-markup">False</property>
            <property name="halign">end</property>
            <property name="xalign">1.0</property>
            <property name="justify">right</property>
            <property name="width-chars">10</property>
          </object>
        </child>
        <child>
          <object class="GtkAdjustment" id="length_spin_adj">
            <property name="lower">4</property>
            <property name="upper">256</property>
            <property name="step-increment">1</property>
            <property name="page-increment">5</property>
            <property name="value">8</property>
          </object>
          <object class="GtkSpinButton" id="length_spin">
            <property name="tooltip-text" translatable="yes">The number of characters in generated passwords - 8 or more are recommended</property>
            <property name="numeric">True</property>
            <property name="hexpand">True</property>
            <property name="adjustment">length_spin_adj</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkCheckButton" id="punctuation_check">
        <property name="label" translatable="yes">Use punctuation characters for passwords</property>
        <property name="tooltip-text" translatable="yes">When passwords are generated, use punctuation characters like %, =, { or .</property>
        <property name="halign">start</property>
      </object>
    </child>
  </object>
</interface>